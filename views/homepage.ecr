<!DOCTYPE html>

<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
<style>
html, body {
    height: 100%;
}
body {
    margin: 0;
    padding: 0 2rem;
    background-color: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
div, textarea, button, audio {
    width: 100%;
}
textarea {
    resize: vertical;
    height: 10rem;
}
audio {
    margin: 2rem 0 0 0;
}
@media only screen and (min-width: 1000px) {
    div, textarea, button, audio {
        width: 50rem;
    }
}
</style>
</head>

<body>
<div>
    <textarea></textarea>
</div>
<div>
    <button>dectalkify</button>
</div>
<div>
    <audio controls src=""></audio>
</div>

<script>
const audio = document.querySelector('audio');
let text = "";
document.querySelector('textarea').addEventListener('input', (e) => text = e.target.value);
document.querySelector('button').addEventListener('click', () => audio.src = encodeURI(text));
</script>

</body>